 @model ERP.Models.User
@{
    ViewBag.Title = "Index";
    ViewBag.Title = "Login";
}
@{
    ViewBag.Title = "Login";
}
<br />
<br />
<br />
<div class="jumbotron" style="opacity: .7; border-bottom: 3px solid #e3c340">
@using (Html.BeginForm("Login","Home", FormMethod.Post))
{
    //this  is for create form tag
    @Html.AntiForgeryToken()          // this is for prevent CSRF attack
    @Html.ValidationSummary(true)
    
     <div class="form-horizontal">
            @Html.ValidationSummary(true)

            <div class="form-group">
                <div class="control-label col-md-4" style="font-weight:bold">
                    Username
                </div>
                <div class="col-lg-4 col-xs-7">
                    @Html.TextBoxFor(a=>a.Name,new { @class = " col-lg-8 form-control" })
                    @Html.ValidationMessageFor(a=>a.Name)
                </div>
            </div>
          <div class="form-group">
                <div class="control-label col-md-4" style="font-weight:bold">
                    Password
                </div>
                <div class="col-lg-4 col-xs-7">
                    @Html.PasswordFor(a=>a.Password,new { @class = " col-lg-8 form-control" })
                    @Html.ValidationMessageFor(a=>a.Password)
                </div>
            </div>

         <div class="form-group">
                <div class="control-label col-md-4" style="font-weight:bold">
                    
                </div>
                <div class="col-lg-2 col-xs-5">
                    <div class="col-lg-2 col-xs-5 "><input type="submit" value="Login" class="btn btn-info"/></div>
                </div>
            </div>
         <p class="">@ViewBag.Message</p>
     </div>
}
</div>

